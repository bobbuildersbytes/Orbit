<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Main Page</title>
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"></script>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }
    .header {
      background-color: #333;
      color: white;
      padding: 20px;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .header-user {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    .header-user img {
      border-radius: 50%;
      width: 80px;
      height: 80px;
      object-fit: cover;
    }
    .user-info h1 {
      margin: 0;
      font-size: 24px;
    }
    .logout-btn {
      background-color: #ff4444;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
    }
    .container {
      display: flex;
      height: calc(100vh - 150px);
    }
    .map-section {
      flex: 1;
      padding: 20px;
      border-right: 1px solid #ccc;
    }
    #map {
      width: 100%;
      height: 100%;
      border-radius: 5px;
    }
    .friends-section {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }
    .friends-list {
      flex: 1;
      overflow-y: auto;
      margin-bottom: 20px;
    }
    .friend-card {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-bottom: 10px;
    }
    .friend-info {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .friend-info img {
      border-radius: 50%;
      width: 50px;
      height: 50px;
      object-fit: cover;
    }
    .remove-btn {
      padding: 5px 10px;
      background-color: #ff4444;
      color: white;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
    .add-friend-section {
      border-top: 1px solid #ccc;
      padding-top: 20px;
    }
    .add-friend-section input {
      padding: 10px;
      width: 100%;
      box-sizing: border-box;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
    }
    .add-friend-section button {
      width: 100%;
      padding: 10px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
    .unique-id-section {
      background-color: #f0f0f0;
      padding: 10px;
      border-radius: 3px;
      margin-bottom: 20px;
      text-align: center;
    }
  </style>
</head>
<body>
  <% if (user) { %>
    <div class="header">
      <div class="header-user">
        <% if (user.profilePicture) { %>
          <img src="uploads/<%= user.profilePicture %>" alt="Profile Picture">
        <% } %>
        <div class="user-info">
          <h1><%= user.firstName %> <%= user.lastName %></h1>
        </div>
      </div>
      <a href="/logout" class="logout-btn">Logout</a>
    </div>

    <div class="container">
      <div class="map-section">
        <div id="map"></div>
      </div>

      <div class="friends-section">
        <h2>Your Friends</h2>
        <div class="friends-list">
          <% if (user.friends && user.friends.length > 0) { %>
            <% user.friends.forEach(friend => { %>
              <div class="friend-card">
                <div class="friend-info">
                  <% if (friend.profilePicture) { %>
                    <img src="uploads/<%= friend.profilePicture %>" alt="<%= friend.firstName %> <%= friend.lastName %>">
                  <% } %>
                  <span><%= friend.firstName %> <%= friend.lastName %></span>
                </div>
                <div style="display: flex; gap: 10px;">
                  <form action="/pager" method="POST" style="margin: 0;">
                    <input type="hidden" name="friendId" value="<%= friend._id %>">
                    <button type="submit" class="remove-btn" style="background-color: #4CAF50;">Pager</button>
                  </form>
                  <form action="/remove-friend" method="POST" style="margin: 0;">
                    <input type="hidden" name="friendId" value="<%= friend._id %>">
                    <button type="submit" class="remove-btn">Remove</button>
                  </form>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p>No friends yet. Add some below!</p>
          <% } %>
        </div>

        <div class="add-friend-section">
          <div class="unique-id-section">
            <strong>Your Unique ID:</strong>
            <p style="margin: 10px 0 0 0; font-size: 18px; font-family: monospace;"><%= user.uniqueId %></p>
          </div>
          <h3>Add Friend</h3>
          <form action="/add-friend" method="POST">
            <input type="text" name="code" placeholder="Enter Friend's Unique ID" required>
            <button type="submit">Add Friend</button>
          </form>
        </div>
      </div>
    </div>

    <script>
      // Initialize map
      const map = L.map('map').setView([43.6629, -79.3957], 13); // Toronto coordinates
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Â© OpenStreetMap contributors',
        maxZoom: 19
      }).addTo(map);
    </script>
  <% } %>
</body>
</html>